module HALF_ADD(
    input A,
    input B,
    output Sum,
    output Carry
);

assign Sum = A ^ B;      
assign Carry = A & B;    
endmodule

# HALF ADDER TESTBENCH

    .A(A),
    .B(B),
    .Sum(Sum),
    .Carry(Carry)
);

initial begin
    $display("A B | Sum Carry");
    $monitor("%b %b |  %b    %b", A, B, Sum, Carry);

    A=0; B=0; #10;
    A=0; B=1; #10;
    A=1; B=0; #10;
    A=1; B=1; #10;

    $finish;
end

endmodule
